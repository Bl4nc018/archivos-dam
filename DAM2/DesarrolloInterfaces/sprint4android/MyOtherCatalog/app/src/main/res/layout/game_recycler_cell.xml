<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_view_game"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Ejercicio 4: Dado un color distinto a los textos. -->
    <TextView
        android:id="@+id/text_view_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/EstiloTitulo"
        app:layout_constraintTop_toTopOf="@+id/image_view_game"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_game"
        app:layout_constraintStart_toEndOf="@+id/image_view_game"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ejercicio 2: Creando el botón.
    Ejercicio 4: Añadido un estilo al botón. Ahora es cuadrado.-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Vista detallada"
        android:layout_marginStart="10dp"
        style="@style/BotonEstilo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_game"
        app:layout_constraintStart_toEndOf="@id/image_view_game"/>


</androidx.constraintlayout.widget.ConstraintLayout>